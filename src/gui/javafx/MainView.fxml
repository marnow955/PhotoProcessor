<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.javafx.Controller">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <MenuBar>
                <Menu text="_File" >
                    <MenuItem onAction="#openFile" text="_Open file..." />
                    <MenuItem onAction="#saveFile" text="_Save file..." />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#closeProgram" text="E_xit" />
                </Menu>
                <Menu text="_Edit">
                    <MenuItem text="_Delete" />
                </Menu>
                <Menu text="_Help">
                    <MenuItem text="_About" />
                </Menu>
            </MenuBar>
            <HBox spacing="10.0">
                <padding>
                    <Insets left="10.0" right="10.0" top="10.0" />
                </padding>
                <ChoiceBox fx:id="algorithmChoiceBox" onAction="#mainProcessSubmitted"/>
                <ChoiceBox fx:id="paletteChoiceBox" onAction="#mainProcessSubmitted"/>
            </HBox>
        </VBox>
    </top>
    <left>
        <HBox fx:id="leftHBox">
            <BorderPane.margin>
                <Insets bottom="10.0" top="10.0" />
            </BorderPane.margin>
            <Button fx:id="leftPanelButton" minWidth="-Infinity" onAction="#showLeftPanel" prefWidth="10.0" />
            <ScrollPane fx:id="leftSP">
                <StackPane fx:id="leftStackPImg">
                    <ImageView fx:id="leftImageView" />
                </StackPane>
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </ScrollPane>
        </HBox>
    </left>
    <center>
        <ScrollPane fx:id="mainSP" BorderPane.alignment="CENTER" onContextMenuRequested="#showContextMenu">
            <StackPane fx:id="mainStackPImg">
                <ImageView fx:id="mainImageView"/>
            </StackPane>
            <BorderPane.margin>
                <Insets bottom="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </ScrollPane>
    </center>
</BorderPane>
